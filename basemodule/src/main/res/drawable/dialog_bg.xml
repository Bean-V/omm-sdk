<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景色 -->
    <solid android:color="@android:color/white"/>
    <!-- 圆角 -->
    <corners android:radius="12dp"/>
    <!-- 边框（可选） -->
    <stroke
        android:width="1dp"
        android:color="#22000000"/>
    <!-- 阴影（需要API 21+） -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>