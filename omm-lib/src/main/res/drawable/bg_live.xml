<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="#F1A72B" android:endColor="#FDC647" android:angle="180"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:startColor="#F1A72B" android:endColor="#FDC647" android:angle="0"/>
        </shape>
    </item>
</selector>