<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_below="@+id/llActionBar">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabIndicatorHeight="2dp"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/tab1_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tab1_layout" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/live_img"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@mipmap/live_bg" />



        <TextView
            android:id="@+id/live_tv"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="44dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="48dp"
            android:background="@drawable/bg_live"
            android:text="@string/start_push"
            android:textColor="#fff"
            android:textSize="18sp" />


<!--    </LinearLayout>-->
</RelativeLayout>

