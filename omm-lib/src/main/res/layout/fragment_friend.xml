<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/friend_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/search_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingBottom="9dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/search_edit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/et_search_bg"
                    android:drawableStart="@drawable/search"
                    android:drawablePadding="9dp"
                    android:gravity="center_vertical|start"
                    android:hint="@string/search_friend"
                    android:paddingStart="9dp"
                    android:paddingEnd="9dp"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/grey_a7"
                    android:textSize="@dimen/message_search_size"/>

            </LinearLayout>

            <com.handmark.pulltorefresh.library.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pull_refresh_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/search_layout"
                android:layout_marginTop="-2dp"
                android:dividerHeight="0dp"
                android:hapticFeedbackEnabled="true"
                android:overScrollMode="never"
                ptr:ptrAnimationStyle="flip"
                ptr:ptrDrawableEnd="@drawable/default_ptr_rotate"
                ptr:ptrDrawableStart="@drawable/default_ptr_flip"
                ptr:ptrHeaderTextColor="@color/black"
                ptr:ptrMode="both"
                ptr:ptrOverScroll="false"
                ptr:ptrScrollingWhileRefreshingEnabled="true"
                ptr:ptrShowIndicator="false" />

            <TextView
                android:id="@+id/text_dialog"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_slide_selected"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_slide_bar_text_size"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/fl_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@drawable/icon_not_found"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/no_data"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SmallerTextSize" />

            </FrameLayout>

            <com.oort.weichat.sortlist.SideBar
                android:id="@+id/sidebar"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/load_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/loading"
        android:textColor="@color/Grey_600"
        android:textSize="@dimen/one_level_title"
        android:visibility="gone" />

</LinearLayout>