<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="警情搜索"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- 搜索表单 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 接警单编号 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="接警单编号"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/et_incident_number"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="请输入24位接警单位编号"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- 报警人姓名 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="报警人姓名"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/et_reporter_name"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="请输入报警人姓名"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- 报警人电话 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="报警人电话"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/et_reporter_phone"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="请输入报警人电话"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true"
                    android:inputType="phone" />

            </LinearLayout>

            <!-- 处警单位 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="处警单位"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <EditText
                    android:id="@+id/et_handling_unit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="请输入处警单位关键字"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:paddingHorizontal="12dp"
                    android:singleLine="true" />

            </LinearLayout>

            <!-- 警情状态 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="警情状态"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <LinearLayout
                    android:id="@+id/ll_status_selector"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/selector_background"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="全部"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 警情级别 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="警情级别"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <LinearLayout
                    android:id="@+id/ll_level_selector"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/selector_background"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="全部"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 报警时间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="报警时间"
                    android:textSize="14sp"
                    android:textColor="#333333" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_start_time"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:hint="开始时间"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:paddingHorizontal="12dp"
                        android:singleLine="true"
                        android:inputType="datetime"
                        android:focusable="false"
                        android:clickable="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textSize="16sp"
                        android:textColor="#999999"
                        android:layout_marginHorizontal="8dp" />

                    <EditText
                        android:id="@+id/et_end_time"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:hint="结束时间"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:paddingHorizontal="12dp"
                        android:singleLine="true"
                        android:inputType="datetime"
                        android:focusable="false"
                        android:clickable="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_reset_background"
            android:text="重置"
            android:textSize="16sp"
            android:textColor="#666666" />

        <Button
            android:id="@+id/btn_filter"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_filter_background"
            android:text="筛选"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>








