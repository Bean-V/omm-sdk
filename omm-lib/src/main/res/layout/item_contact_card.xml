<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F6F6F6">

    <!-- 暂无数据的提示TextView -->
    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="暂无数据"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:visibility="gone" />

    <!-- 原有的联系人信息布局 -->
    <LinearLayout
        android:id="@+id/layout_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_contact_avatar"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/ic_default_avatar"
                app:riv_corner_radius="25dp"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杨江平"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- 电话和部门信息，与名字左对齐 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_2">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_phone" />
                <TextView
                    android:id="@+id/tv_contact_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18210367009"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_branch" />
                <TextView
                    android:id="@+id/tv_contact_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="中国公安局治安管理队第一支队"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_video_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@mipmap/ic_video_call"
                android:background="@drawable/circle_green"
                android:padding="2dp"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:id="@+id/iv_phone_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@mipmap/ic_phone_call"
                android:background="@drawable/circle_blue"
                android:padding="2dp"
                android:layout_marginEnd="10dp" />

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:src="@mipmap/ic_chat"
                android:background="@drawable/circle_blue"
                android:padding="2dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>