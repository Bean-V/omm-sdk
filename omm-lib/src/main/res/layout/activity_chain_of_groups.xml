<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <!-- 顶部导航栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 返回按钮 -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

            <!-- 标题 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="接龙结果"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- 发送按钮 -->
            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/a_bg_for_send_msg"
                android:text="发送"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:gravity="center"
                android:backgroundTint="#4CAF50" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

     <!-- 主内容区域 -->
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintTop_toBottomOf="@id/toolbar"
         app:layout_constraintBottom_toTopOf="@id/ll_bottom_area"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 发起人信息区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="12dp"
                android:background="#F8F8F8"
                android:paddingHorizontal="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/a_bg_avatar"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_initiator_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="由二栋一单元-801发起接龙,参与接龙目前共0人"
                    android:textSize="14sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- 分割线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- 接龙标题输入框 -->
            <EditText
                android:id="@+id/et_chain_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="#接龙\n"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:background="@drawable/a_bg_text_info"
                android:padding="12dp"
                android:minHeight="48dp"
                android:gravity="top"
                android:maxLines="2"
                android:inputType="textMultiLine" />

            <!-- 接龙列表区域 -->
            <LinearLayout
                android:id="@+id/ll_chain_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <!-- 接龙项目示例 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="例"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:background="@drawable/a_bg_number_circle" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_36"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:hint="可填写接龙格式"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textColorHint="#999999"
                        android:background="@drawable/a_bg_text_info"
                        android:padding="8dp"
                        android:singleLine="true"/>

                </LinearLayout>

                <!-- 接龙参与者列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_chain_participants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>



        <!-- 底部固定区域 -->
        <LinearLayout
            android:id="@+id/ll_bottom_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="8dp"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 添加按钮 -->
            <LinearLayout
                android:id="@+id/ll_add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"

                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/a_bg_add_button"
                    android:padding="4dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="添加接龙"
                    android:textSize="14sp"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- 补充信息输入框 -->
            <EditText
                android:id="@+id/et_supplement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:hint="可填写补充信息"
                android:textSize="14sp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:background="@drawable/a_bg_edit_text"
                android:padding="12dp"
                android:maxLines="3" />

        </LinearLayout>

        </LinearLayout>

     </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>