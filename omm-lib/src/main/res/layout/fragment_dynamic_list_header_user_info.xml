<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_banner"/>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="0dp"
            android:elevation="0dp"
            card_view:cardBackgroundColor="#07000000"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_user_header"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="8dp"
                            card_view:riv_corner_radius="32.5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/tv_user_depart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="个人信息"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_dongtai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/moments"
                                    android:textSize="13sp"
                                    android:textColor="#666666"
                                    android:layout_marginLeft="10dp"
                                    />

                                <TextView
                                    android:id="@+id/tv_dongtai_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    />


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/fans"
                                    android:textSize="13sp"
                                    android:textColor="#666666"
                                    android:layout_marginLeft="10dp"
                                    />
                                <TextView
                                    android:id="@+id/tv_fans_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    />



                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_attend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="41dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/follows"
                                    android:textSize="13sp"
                                    android:textColor="#666666"
                                    android:layout_marginLeft="10dp"
                                    />

                                <TextView
                                    android:id="@+id/tv_attend_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    />



                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"></TextView>
                        <Button
                            android:id="@+id/btn_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/follow"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="3dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/button_shape"
                            android:minHeight="20dp"
                            android:minWidth="20dp"
                            android:textAllCaps="false"

                            android:textColor="@color/white"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </FrameLayout>








</LinearLayout>