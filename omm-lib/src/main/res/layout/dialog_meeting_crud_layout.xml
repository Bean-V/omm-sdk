<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_discover">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/dp_24"
        android:text="会议设置"
        android:textColor="@color/color_1a1"
        android:textStyle="bold"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/meeting_c"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:background="@drawable/bg_discover_click"
        android:visibility="gone"
        android:text="创建会议" />
    <TextView
        android:id="@+id/meeting_r"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:visibility="gone"
        android:background="@drawable/bg_discover_click"
        android:gravity="center"
        android:text="查询会议" />
    <TextView
        android:id="@+id/meeting_u"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:background="@drawable/bg_discover_click"
        android:text="编辑会议" />
    <TextView
        android:id="@+id/meeting_d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_discover_click"
        android:gravity="center"
        android:text="删除会议" />

</LinearLayout>