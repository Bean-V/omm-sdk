<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_appicon" />

    </RelativeLayout>
<!--    android:layout_weight="0.5"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_depart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/bumen" />
            <Spinner

                android:layout_marginTop="40dp"
                android:layout_marginLeft="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/regist_department_sp">
                <!--                android:entries="@array/departmentarray">-->
            </Spinner>
            <Spinner
                android:visibility="gone"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/regist_department_sp1"
                android:entries="@array/departmentarray">
            </Spinner>
        </LinearLayout>
<!--        android:layout_weight="1"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/earth_icon" />

                <EditText
                    android:id="@+id/phone_numer_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/phone_number"
                    android:inputType="number"
                    android:padding="2dp"
                    android:textSize="@dimen/one_level_title" />

                <View
                    android:layout_width="0.5dip"
                    android:layout_height="20dp"
                    android:background="@color/light_gray_7" />

                <TextView
                    android:id="@+id/tv_prefix"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="9dp"
                    android:drawableLeft="@mipmap/popup_arrow_down_green"
                    android:gravity="center"
                    android:text="+86"
                    android:textSize="@dimen/sp_13_text_size" />

            </LinearLayout>

            <View
                style="@style/View_Line"
                android:layout_marginTop="4dp" />

        </LinearLayout>
<!--        android:layout_weight="1"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:id="@+id/offline_gone_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/lp" />

                <EditText
                    android:id="@+id/password_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/digits_password"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:padding="2dp"
                    android:textSize="@dimen/one_level_title"
                    android:textAlignment="viewStart"/>

                <ToggleButton
                    android:id="@+id/tbEye"
                    style="@style/PasswordEye" />

            </LinearLayout>

            <View
                android:id="@+id/gone_v"
                style="@style/View_Line"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:id="@+id/ll_offline"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Switch
                    android:layout_marginTop="@dimen/dp5"
                    android:textSize="13sp"
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:text="离线登录" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/code_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:visibility="gone"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/lm" />

            <EditText
                android:id="@+id/code_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/digits"
                android:hint="@string/verification_code"
                android:padding="2dp"
                android:textSize="@dimen/one_level_title" />

            <ImageView
                android:id="@+id/code_image"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="20dp"
                android:background="@color/Grey_400" />

            <ImageView
                android:id="@+id/code_image_refresh"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_refre_msg_code" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4dp"
            android:background="@color/Grey_300" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="visible">

        <Button
            android:id="@+id/forget_password_btn"
            style="@style/GreenNormalTextView"
            android:layout_alignParentLeft="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/forget_password"
            android:textColor="@color/app_skin_black"
            android:textSize="@dimen/sp_13_text_size"
            android:visibility="gone"/>

        <Button
            android:id="@+id/register_account_btn"
            style="@style/GreenNormalTextView"
            android:layout_alignParentRight="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/register_account"
            android:textColor="@color/app_skin_black"
            android:textSize="@dimen/sp_13_text_size"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.14"
        android:gravity="top|center_horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ql_l_g_bg_ripple"
            android:text="@string/btn_login"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llThirdLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.28"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/wx_login_fl"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/wx_login_btn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/icon_wx_button"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/qq_login_fl"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/qq_login_btn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@mipmap/icon_qq_button"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/sms_login_fl"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/sms_login_btn"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/icon_sms_button"
                android:visibility="gone" />

        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/set_list_down"
        android:visibility="gone">

        <com.oort.weichat.view.ClearEditText
            style="@style/EditTextWithLeftIcon"
            android:hint="@string/please_input_phone_number"
            android:inputType="phone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/set_list_down"
        android:visibility="gone">

        <com.oort.weichat.view.ClearEditText
            style="@style/EditTextWithLeftIcon"
            android:hint="@string/please_input_password"
            android:inputType="textPassword" />

    </LinearLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginBottom="@dimen/dp20"
        android:visibility="gone"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线人脸识别登录"
            android:textColor="@color/main_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvOffManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离线管理"
            android:textColor="@color/main_color"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dp20"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:background="@color/main_color" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>