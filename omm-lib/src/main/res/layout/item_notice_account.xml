<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_background_ripple"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="9dp"
    android:paddingBottom="9dp">

    <com.oort.weichat.view.HeadView
        android:id="@+id/notice_iv"
        android:layout_width="@dimen/contacts_head_image_size"
        android:layout_height="@dimen/contacts_head_image_size"
        android:layout_alignParentLeft="true"
        android:src="@drawable/im_notice" />

    <TextView
        android:id="@+id/notice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/notice_iv"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/contacts_head_size" />

</RelativeLayout>