<?xml version="1.0" encoding="utf-8"?>
<com.oort.weichat.view.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_top_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:textColor="#3763fe"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:background="@drawable/background_chat_top_msg"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_chat_top_msg"

            />
        <TextView
            android:id="@+id/tv_top_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file"
            android:textColor="#333333"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/icon_chat_top_file"
            android:visibility="gone"


            />
        <TextView
            android:id="@+id/tv_top_announce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_record"
            android:textColor="#333333"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:drawableLeft="@mipmap/icon_chat_top_note"

            />

    </LinearLayout>

<!--    <include layout="@layout/viewstub_chatactivity" />-->

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <include layout="@layout/viewstub_chatactivity"
            android:id="@+id/vb_chat_content"/>
        <include layout="@layout/viewstub_group_record"
            android:id="@+id/vb_chat_group_record"
            android:visibility="gone"/>

    </FrameLayout>


</com.oort.weichat.view.MyLinearLayout>