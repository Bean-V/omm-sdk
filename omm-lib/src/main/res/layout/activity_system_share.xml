<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar"/>

    <LinearLayout
        android:id="@+id/ll_select_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_group_members"
                android:textColor="#333333"
                android:layout_marginLeft="15dp"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox"
                    android:checked="true"
                    android:text="@string/send_single"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <RadioButton
                    android:id="@+id/rb_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:button="@drawable/checkbox"
                    android:layout_marginLeft="20dp"
                    android:text="@string/create_group_send"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_11" />

            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_arrow_gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_create_newmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:paddingBottom="15dp"
        android:paddingLeft="9dp"
        android:paddingTop="15dp"
        android:text="@string/create_new_chat"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="@dimen/one_level_title"/>

    <LinearLayout
        android:id="@+id/ll_send_life_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View style="@style/View_Line" />

        <TextView
            android:id="@+id/tv_send_life_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector_background_ripple"
            android:paddingLeft="9dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/send_to_life_circle"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/normal_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="9dp"
        android:paddingTop="2dp"
        android:text="@string/recent_chat"
        android:textSize="@dimen/two_level_content"/>

    <ListView
        android:id="@+id/lv_recently_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:divider="@color/pop_line"
        android:dividerHeight="0.5dp"/>

</LinearLayout>