<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clipChildren="false">



    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="@string/post_delete_tv_d"
        android:textColor="@color/white"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb"
        android:clipChildren="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical">

            <EditText
                android:id="@+id/text_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_white"
                android:gravity="top"
                android:hint="@string/circle_now_think"
                android:inputType="textMultiLine"
                android:maxLength="10000"
                android:maxLines="10"
                android:minHeight="80dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_a7"
                android:textSize="@dimen/say_something_size" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rcv_img"
                android:clickable="false"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/normal_bg" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height = "wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="17dp"
                            android:src="@mipmap/icon_dynamic_audio"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"

                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="@string/upload_audio"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="visible"/>
                            <com.oortcloud.basemodule.views.AutoHeightRecyclerView
                                android:id="@+id/rv_audio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="0dp"
                                android:layout_marginLeft="0dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_dymaic_att_layout"
                                android:visibility="visible"/>

                            <View
                                style="@style/View_Line"
                                android:layout_marginLeft="36dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_dynamic_add_audio"
                            android:layout_marginTop="17dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/icon_dynamic_add_att"/>


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <ImageView
                            android:layout_marginTop="17dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@mipmap/icon_dynamic_att"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"

                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="@string/upload_att"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="visible"/>
                            <com.oortcloud.basemodule.views.AutoHeightRecyclerView
                                android:id="@+id/rv_att"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="0dp"
                                android:layout_marginLeft="0dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_dymaic_att_layout"
                                android:visibility="visible"/>

                            <View
                                style="@style/View_Line"
                                android:layout_marginLeft="36dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_dynamic_add_att"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="17dp"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/icon_dynamic_add_att"/>


                    </LinearLayout>



                </LinearLayout>





                <LinearLayout
                    android:id="@+id/ll_topic"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"

                        android:src="@mipmap/icon_dynamic_topic_gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/place_topic"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginLeft="10dp"/>

                    <include layout="@layout/item_dymaic_topic_layout"
                        android:id="@+id/layout_topic_item"
                        android:visibility="gone"/>


                </LinearLayout>

                <View
                    style="@style/View_Line"
                    android:layout_marginLeft="36dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_at"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@mipmap/icon_dynamic_at_gray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dynamic_at"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginLeft="10dp"/>


                    </LinearLayout>

                    <com.oortcloud.basemodule.views.AutoHeightRecyclerView
                        android:id="@+id/rv_atmembers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:listitem="@layout/item_dynamic_member_layout"
                        app:spanCount="5"

                        android:visibility="visible"/>

                    <View
                        style="@style/View_Line"
                        android:layout_marginLeft="36dp" />

                </LinearLayout>




            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_edit"
                android:clickable="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:descendantFocusability="blocksDescendants"
                android:paddingStart="@dimen/dp20"
                android:paddingEnd="@dimen/dp20"
                android:paddingBottom="@dimen/dp10_contact"
                tools:itemCount="5"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_dynamic_img_layout"
                tools:spanCount="4" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
    <include
        android:id="@id/tb"
        layout="@layout/a_view_actionbar" />

</RelativeLayout>