<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_chat_text_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"

    android:elevation="10dp">


    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_popup_arrow"
        tools:rotation="180"
        tools:translationX="75dp" />

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fbl"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="#ffffff"
        app:flexWrap="wrap">

    <TextView
        android:id="@+id/item_chat_copy_tv"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:drawableTop="@mipmap/icon_chat_msg_menu_copy"
        android:text="@string/copy"
        android:textColor="#333333"
        android:textSize="@dimen/three_level_content"
        android:background="@drawable/btn_bg_color_selector"
        android:visibility="visible"/>



    <TextView
        android:id="@+id/item_chat_relay_tv"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="@string/forward"
        android:textColor="#333333"
        android:drawableTop="@mipmap/icon_chat_msg_menu_trans"
        android:background="@drawable/btn_bg_color_selector"
        android:textSize="@dimen/three_level_content" />

        <TextView
            android:id="@+id/collection_other"
            android:paddingTop="10dp"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="@string/collection"
            android:textColor="#333333"
            android:drawableTop="@mipmap/icon_chat_msg_menu_collect"
            android:background="@drawable/btn_bg_color_selector"
            android:textSize="@dimen/three_level_content" />



    <TextView
        android:id="@+id/item_chat_del_tv"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="#333333"
        android:drawableTop="@mipmap/icon_chat_msg_menu_del"
        android:background="@drawable/btn_bg_color_selector"
        android:textSize="@dimen/three_level_content" />

    <TextView
        android:id="@+id/item_chat_more_select"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/multi_select"
        android:textColor="#333333"
        android:drawableTop="@mipmap/icon_chat_msg_menu_mui_sel"
        android:background="@drawable/btn_bg_color_selector"
        android:textSize="@dimen/three_level_content" />

        <TextView
            android:id="@+id/item_chat_back_tv"
            android:paddingTop="10dp"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="@string/With_draw"
            android:textColor="#333333"
            android:drawableTop="@mipmap/icon_chat_msg_menu_back"
            android:background="@drawable/btn_bg_color_selector"
            android:textSize="@dimen/three_level_content" />

        <TextView
            android:id="@+id/item_chat_replay_tv"
            android:paddingTop="10dp"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:gravity="center"
            android:text="@string/replay_button"
            android:textColor="#333333"
            android:drawableTop="@mipmap/icon_chat_msg_menu_reply"
            android:textSize="@dimen/three_level_content" />
    <TextView
        android:id="@+id/item_chat_timer"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/remind_str"
        android:textColor="#333333"
        android:textSize="@dimen/three_level_content"
        android:drawableTop="@mipmap/icon_chat_msg_menu_noti"
        android:background="@drawable/btn_bg_color_selector"
        android:visibility="visible" />



    <TextView
        android:id="@+id/item_chat_collection_tv"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="visible"
        android:text="@string/save_emoticon"
        android:textColor="#333333"
        android:drawableTop="@mipmap/icon_chat_msg_menu_save_emoji"
        android:background="@drawable/btn_bg_color_selector"
        android:textSize="@dimen/three_level_content" />


    <TextView
        android:id="@+id/item_chat_record"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        android:text="@string/record_course"
        android:textColor="#333333"
        android:background="@drawable/btn_bg_color_selector"
        android:textSize="@dimen/three_level_content" />

    <TextView
        android:id="@+id/item_chat_speaker"
        android:paddingTop="10dp"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#333333"
        android:textSize="@dimen/three_level_content"
        android:background="@drawable/btn_bg_color_selector"
        android:visibility="gone" />



</com.google.android.flexbox.FlexboxLayout>



