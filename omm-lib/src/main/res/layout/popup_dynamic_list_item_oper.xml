<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingEnd="15dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_dynamic_list_item_popup_share"></ImageView>
                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dyn_share"
                        android:layout_marginLeft="15dp"
                        android:textColor="#333333"
                        android:background="@color/white"/>

                </LinearLayout>
                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:background="#00000000"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="39dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#f2f2f2"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_dynamic_list_item_popup_jinghua"></ImageView>
                    <TextView
                        android:id="@+id/tv_jinhua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dyn_cancel_cream"
                        android:layout_marginLeft="15dp"
                        android:textColor="#333333"
                        android:background="@color/white"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_jinhua"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:background="#00000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="39dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#f2f2f2"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_dynamic_list_item_popup_baijin"></ImageView>
                    <TextView
                        android:id="@+id/tv_baijin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dyn_cancel_platinum"
                        android:layout_marginLeft="15dp"
                        android:textColor="#333333"
                        android:background="@color/white"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_baijin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:background="#00000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="39dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#f2f2f2"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_dynamic_list_item_popup_top"></ImageView>
                    <TextView
                        android:id="@+id/tv_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dyn_cancel_top"
                        android:layout_marginLeft="15dp"
                        android:textColor="#333333"
                        android:background="@color/white"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_top"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:background="#00000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="39dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#f2f2f2"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_dynamic_list_item_popup_del"></ImageView>
                    <TextView
                        android:id="@+id/tv_del"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dyn_delete"
                        android:layout_marginLeft="15dp"
                        android:textColor="#333333"
                        android:background="@color/white"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_del"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:background="#00000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="39dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#f2f2f2"/>
            </FrameLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 右上角小三角形 -->
    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="top|end"
        android:background="@drawable/triangle_shape"
        android:translationX="10dp"
        android:translationY="-10dp"/>

</FrameLayout>