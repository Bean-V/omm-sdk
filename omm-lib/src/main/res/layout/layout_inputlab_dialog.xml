<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#40000000"
    >
    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="190dp">
<!--        <com.google.android.material.imageview.ShapeableImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@color/white"-->
<!--            app:shapeAppearance="@style/Rounded4Style"-->
<!--            />-->


        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="0.5dp"
            tools:ignore="UnusedAttribute">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/labedit"
                android:text="@string/add_tag_dialog"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:background="#00ffffff"/>
            <EditText
                android:id="@+id/edit_inputlab"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#f1f1f1"
                android:hint="@string/input_tag_name"
                android:paddingLeft="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f1f1f1"
                android:layout_marginTop="145dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="148dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/cancel"
                    android:textColor="#E84845"
                    android:layout_marginLeft="10dp"
                    android:background="#00ffffff"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#f1f1f1"
                    android:layout_marginTop="145dp"
                    />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/button_ok"
                    android:textColor="#1156A6"
                    android:layout_marginLeft="10dp"
                    android:background="#00ffffff"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </FrameLayout>




</LinearLayout>