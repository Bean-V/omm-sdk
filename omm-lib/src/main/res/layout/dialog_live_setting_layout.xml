<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/dialog_privacy_bg"
    android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginLeft="@dimen/dp_24"
                android:text="@string/live_push_seting"
                android:textColor="@color/color_1a1"
                android:textStyle="bold"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/live_theme_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:layout_margin="@dimen/dp_16"
                android:textColor="@color/color_1a1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/dp_14"
                android:hint="@string/live_push_theme"
                android:background="@drawable/bg_live_edit"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/live_notice_et"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_margin="@dimen/dp_16"
                android:textColor="@color/color_1a1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/dp_14"
                android:hint="@string/live_push_announcement"
                android:background="@drawable/bg_live_edit"
                android:paddingTop="@dimen/dp_18"
                android:gravity="left"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16">

            <CheckBox
                android:id="@+id/is_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:button="@drawable/checkbox"
                android:checked="false" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/is_check"
                android:paddingTop="16dp"
                android:paddingBottom="@dimen/dp_16"
                android:text="允许观众视频发言"
                android:textColor="@color/color_666666"
                android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_16"
                android:id="@+id/layout_to_do"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_exit"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/cancel"
                    android:textColor="@color/color_666666"
                    android:textSize="14sp" />

                <View

                    android:layout_width="0.25dp"
                    android:layout_height="32dp"
                    android:background="#D8D8D8" />

                <Button
                    android:id="@+id/btn_enter"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/button_ok"
                    android:textColor="#3F70FF"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

