<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_4"
    android:layout_height="176dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/meeting_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:riv_border_color="#333333"
        app:riv_border_width="0dip"
        app:riv_corner_radius="6dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_tile_mode="clamp"
        android:src="@drawable/live_bg1" />
    <TextView
        android:id="@+id/meeting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:ems="15"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        tools:text="一二三四五六" />

    <TextView
        android:id="@+id/meeting_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:ems="20"
        android:layout_below="@id/meeting_title"
        android:layout_marginLeft="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="一二三四五六" />

    <TextView
        android:id="@+id/meeting_emcee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="@dimen/dp_8"
        android:ellipsize="end"
        android:ems="20"
        android:layout_below="@id/meeting_content"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="一二三四五六" />
    <TextView
        android:id="@+id/meeting_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@id/meeting_emcee_name"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="@dimen/dp_6"
        android:ellipsize="end"
        android:ems="25"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="一二三四五六" />
    <TextView
        android:id="@+id/meeting_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="666" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
       android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_6"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="4dp"
            android:src="@mipmap/icon_live_people" />

        <TextView
            android:id="@+id/meeting_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="666" />

    </LinearLayout>


</RelativeLayout>