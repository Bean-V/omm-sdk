<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp15"
        android:paddingTop="14dp"
        android:paddingEnd="@dimen/dp15">

        <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="8dp"
            android:id="@+id/avatar_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            tools:src="@drawable/avatar_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10_contact"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nick_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="昵称"
                    android:textSize="@dimen/bussic_nick_name_size" />

                <TextView
                    android:id="@+id/tv_baijing_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:text="@string/place_platinum"
                    android:background="@drawable/background_dynamic_grade"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_jinghua_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:background="@drawable/background_dynamic_grade"
                    android:text="@string/place_cream"
                    android:textColor="@color/black"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_settop_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:background="@drawable/background_dynamic_settop"
                    android:text="@string/set_top1"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/bussic_time_size"
                    tools:text="10:08" />
                <TextView
                    android:id="@+id/delete_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/tv_dept"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/link_nick_name_color"
                    android:textSize="@dimen/bussic_time_size"
                    tools:text="@string/cancel_collection" />

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="65dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <com.oort.weichat.util.link.HttpTextView
                    android:id="@+id/body_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3"
                    android:maxLines="6"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/black"
                    android:text="3333333"
                    android:visibility="visible"
                    android:textSize="@dimen/bussic_content_size"
                    android:textAlignment="viewStart"/>

                <!--  <com.oort.weichat.util.link.HttpTextView
                      android:id="@+id/body_tvS"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="@color/black"
                      android:textSize="@dimen/bussic_content_size"
                      android:visibility="gone" />-->

            </FrameLayout>

            <TextView
                android:id="@+id/open_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/weibo_cell_all_text"
                android:textColor="@color/link_nick_name_color"
                android:textSize="@dimen/bussic_content_size"
                android:visibility="gone" />


            <com.xuexiang.xui.widget.flowlayout.FlowTagLayout
                android:id="@+id/tagLayout"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <FrameLayout
                android:id="@+id/content_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_att"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="LinearLayoutManager"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llOperator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">



                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/dark_grey"
                        android:textSize="11sp"
                        tools:text="10:08" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/bussic_time_size"
                        tools:text="10:00" />
                    <LinearLayout
                        android:id="@+id/llCollection"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginEnd="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.oort.weichat.view.CheckableImageView
                            android:id="@+id/ivCollection"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/checkable_collection" />
                        <TextView
                            android:id="@+id/tvCollect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:text="0"
                            android:textColor="@color/link_nick_name_color"
                            android:textSize="13sp"
                            tools:text="250" />

                    </LinearLayout>


                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/llThumb"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.oort.weichat.view.CheckableImageView
                            android:id="@+id/ivThumb"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/checkable_thumb" />

                        <TextView
                            android:id="@+id/tvThumb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:text="0"
                            android:textColor="@color/link_nick_name_color"
                            android:textSize="13sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/llComment"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"

                        android:layout_marginEnd="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.oort.weichat.view.CheckableImageView
                            android:id="@+id/ivComment"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/checkable_comment" />

                        <TextView
                            android:id="@+id/tvComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp5"
                            android:text="0"
                            android:textColor="@color/link_nick_name_color"
                            android:textSize="13sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="12dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:id="@+id/llReport"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.oort.weichat.view.CheckableImageView
                            android:id="@+id/ivReport"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/icon_dynamic_list_item_more" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textColor="@color/link_nick_name_color"
                android:textSize="@dimen/bussic_time_size"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@color/comment_background"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_prise"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/icon_dynamic_list_item_like"/>

                <TextView
                    android:id="@+id/multi_praise_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp5"
                    android:textSize="13sp"
                    android:textAlignment="viewStart"/>
            </LinearLayout>


            <View
                android:id="@+id/line_v"
                style="@style/View_Line"
                android:visibility="visible" />

            <com.oort.weichat.view.MyListView
                android:id="@+id/command_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                android:divider="#00000000"
                android:background="@color/comment_background" />

            <TextView
                android:id="@+id/tvLoadMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/comment_background"
                android:gravity="center"
                android:text="@string/tip_load_more"
                android:textColor="@color/link_nick_name_color"
                android:visibility="gone"
                tools:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/View_Line"
        android:layout_marginTop="14dp" />

</LinearLayout>