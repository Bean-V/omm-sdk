<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lcfavorite.ActivityFav"
    android:orientation="vertical">
    <include layout="@layout/a_view_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ListView
            android:id="@+id/list_Lab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Hello World!"
            android:background="#f1f1f1"
            android:divider="#00ffffff"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#f1f1f1"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">
                <!--    <com.google.android.material.imageview.ShapeableImageView-->
                <!--        android:layout_width="match_parent"-->
                <!--        android:layout_height="36dp"-->
                <!--        android:background="#f1f1f1"-->
                <!--        android:layout_marginTop="15dp"-->
                <!--        android:layout_marginLeft="15dp"-->
                <!--        android:layout_marginRight="15dp"-->
                <!--        app:shapeAppearance="@style/Rounded4Style"-->
                <!--        />-->


                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="0.5dp"
                    card_view:cardBackgroundColor="#f1f1f1"
                    >

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="0dp"
                        android:src="@mipmap/icon_sp_search"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/edit_inputlab"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="20dp"
                        android:background="#f1f1f1"
                        android:text="搜索人员"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        />

                </androidx.cardview.widget.CardView>


            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_pic_video"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="图片与视频"
                    android:textColor="#1156A6"
                    android:layout_marginLeft="15dp"
                    android:background="#00ffffff"/>
                <TextView
                    android:id="@+id/tv_file"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="文件"
                    android:textColor="#1156A6"
                    android:layout_marginLeft="15dp"
                    android:background="#00ffffff"/>
                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="链接"
                    android:textColor="#1156A6"
                    android:layout_marginLeft="15dp"
                    android:background="#00ffffff"/>
                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:text="聊天记录"
                    android:textColor="#1156A6"
                    android:layout_marginLeft="15dp"
                    android:background="#00ffffff"/>

            </LinearLayout>

            <ListView
                android:id="@+id/list_p"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Hello World!"
                android:layout_marginLeft="10dp"
                android:divider="#00ffffff"
                />

<!--            <TextView-->
<!--                android:id="@+id/lab_name"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="30dp"-->
<!--                android:text="标签人数20"-->
<!--                android:textSize="13sp"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:textAlignment="center"-->
<!--                />-->




        </LinearLayout>
    </LinearLayout>


</LinearLayout>