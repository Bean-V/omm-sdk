<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（黑色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="5dip" />
            <gradient android:startColor="#EFEFF4"
                android:endColor="#EFEFF4" />
        </shape>
    </item>

    <!--  设置进度条颜色（白色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient  android:startColor="#85848A"
                    android:endColor="#85848A" />
            </shape>
        </clip>
    </item>

</layer-list>