<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_16"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="@dimen/text_size_48" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_16"
                    android:text="@string/full_comment_str"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line1"
                android:orientation="vertical">

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_33"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tiny_spot_score_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★★★★★"
                        android:textColor="@color/color_86858B"
                        android:textSize="@dimen/text_size_12" />

                    <ProgressBar
                        android:id="@+id/progress_score_1"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:max="100"
                        android:progress="100"

                        android:progressDrawable="@drawable/background_progress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_33"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tiny_spot_score_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    ★★★★"
                        android:textColor="@color/color_86858B"
                        android:textSize="@dimen/text_size_12" />

                    <ProgressBar
                        android:id="@+id/progress_score_2"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:max="100"
                        android:progress="80"
                        android:progressDrawable="@drawable/background_progress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_33"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tiny_spot_score_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="        ★★★"
                        android:textColor="@color/color_86858B"
                        android:textSize="@dimen/text_size_12" />

                    <ProgressBar
                        android:id="@+id/progress_score_3"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:max="100"
                        android:progress="60"
                        android:progressDrawable="@drawable/background_progress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_33"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tiny_spot_score_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="            ★★"
                        android:textColor="@color/color_86858B"
                        android:textSize="@dimen/text_size_12" />

                    <ProgressBar
                        android:id="@+id/progress_score_4"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:max="100"
                        android:progress="40"
                        android:progressDrawable="@drawable/background_progress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_33"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tiny_spot_score_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="                ★"
                        android:textColor="@color/color_86858B"
                        android:textSize="@dimen/text_size_12" />

                    <ProgressBar
                        android:id="@+id/progress_score_5"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="@dimen/margin_left_10"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:max="100"
                        android:progress="20"
                        android:progressDrawable="@drawable/background_progress" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_16"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                tools:text="多少人评论" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"

            android:layout_marginLeft="@dimen/margin_left_16"
            android:layout_marginRight="@dimen/margin_right_16"
            android:background="@color/color_D8D8D8" />

        <LinearLayout
            android:id="@+id/comment_click_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_18"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="79dp"
                android:text="@string/progress_comment_str"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_12" />

            <com.oortcloud.appstore.widget.RatingBarView
                android:id="@+id/rating_bar_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_10"
                app:clickable="true"
                app:starCount="5"
                app:starEmpty="@mipmap/rating"
                app:starFill="@mipmap/rating_selected"
                app:starHalf="@mipmap/rating_half"
                app:starImageSize="20dp"
                app:starStep="0"
                app:stepSize="Half"></com.oortcloud.appstore.widget.RatingBarView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/margin_left_16"
            android:layout_marginTop="@dimen/margin_top_12"
            android:layout_marginRight="@dimen/margin_right_16"
            android:background="@color/color_D8D8D8" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comment_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>