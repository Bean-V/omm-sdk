<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"
        android:visibility="gone"/>

    <com.oortcloud.appstore.widget.SearchView
        android:id="@+id/searchview"
        android:layout_marginTop="36dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/margin_top_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_centont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:layout_marginLeft="@dimen/margin_left_16"
            android:textColor="@color/color_999999"
            android:text="@string/search_history_str"/>
        <ImageView
            android:id="@+id/delete_img"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete"
            android:layout_marginRight="@dimen/margin_right_23"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.oortcloud.appstore.widget.HistoryLaberView
            android:id="@+id/history_lab_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_12"
            android:layout_marginLeft="@dimen/margin_left_16"
            android:orientation="vertical"/>
    </RelativeLayout>




</LinearLayout>