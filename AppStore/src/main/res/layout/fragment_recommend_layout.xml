<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.oortcloud.appstore.widget.SearchLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.oortcloud.appstore.widget.RecyclerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <com.oortcloud.appstore.widget.RoundImageView
                app:radius="5dp"
                android:id="@+id/round_image"
                android:layout_marginLeft="@dimen/margin_left_16"
                android:layout_marginRight="@dimen/margin_right_16"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerInside"

                android:src="@mipmap/oort" />

            <include

                android:id="@+id/choiceness_app"
                layout="@layout/app_list_layout" />

            <include
                android:visibility="gone"
                android:id="@+id/installation_essential"
                layout="@layout/app_list_layout" />

            <include
                android:id="@+id/all_person_need"
                layout="@layout/app_list_layout" />

        </LinearLayout>

    </com.oortcloud.appstore.widget.RecyclerScrollView>

</LinearLayout>