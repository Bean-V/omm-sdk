<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_cd"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingTop="10dp"
        tools:text=""
        android:textColor="@color/color_333"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:gravity="center"
        android:text="合并安全区联系人"
        android:textColor="@color/color_787"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/cover_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_36"
        android:background="@drawable/cheek_contact"
        android:gravity="center"
        android:text="覆盖安全区联系人"
        android:textColor="@color/color_999"
        android:visibility="gone"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/all_layout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom">
<!--        android:layout_marginRight="@dimen/dp_32"-->
        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"

            android:background="@drawable/cl_contact_cd"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/button_ok"
            android:textColor="@color/ok_btn_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_toLeftOf="@id/confirm_btn"
            android:background="@drawable/cl_contact_cd"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="@string/cancel"
            android:textColor="@color/cancel_btn_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</LinearLayout>