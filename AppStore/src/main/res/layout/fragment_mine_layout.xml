<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mine_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F2F2F2"
    android:visibility="invisible"
    android:orientation="vertical">

    <com.oortcloud.appstore.widget.SearchLayout
        android:id="@+id/search_view"
        android:background="@color/color_FAFFFFFF"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_bottom_8"
        android:layout_height="wrap_content"/>

    <com.oortcloud.appstore.widget.RecyclerRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

    <com.oortcloud.appstore.widget.HeaderRecyclerView

        android:id="@+id/rv_add_module_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_6"
        android:layout_marginRight="@dimen/margin_right_6"
        android:overScrollMode="never"
        android:fadingEdge="none"/>

    </com.oortcloud.appstore.widget.RecyclerRefreshLayout>
<!--      </RelativeLayout>-->


</LinearLayout>