<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="@dimen/margin_left_10"
            android:src="@mipmap/back_icon"/>
        <FrameLayout
           android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:minHeight="30dp"
                android:textColor="@color/color_666666"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/search_hint_str"
                android:background="@drawable/edittext_bg_selector"
                android:textSize="18sp"
                android:textCursorDrawable="@drawable/color_cursor"/>


            <ImageView
                android:visibility="gone"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_delete"
                android:id="@+id/search_iv_delete"
                android:layout_gravity="right|center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_search"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/background_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nav_search_text_color"
            android:textSize="14sp"
            android:text="@string/search_str"
            />
    </LinearLayout>
    <ListView
        android:visibility="gone"
        android:id="@+id/search_lv_tips"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ListView>

</LinearLayout>
