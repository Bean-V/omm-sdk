<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_left_16"
    android:layout_marginTop="@dimen/margin_top_16"
    android:layout_centerVertical="true">
    <TextView
        android:id="@+id/ranking_tv"
        android:layout_width="@dimen/dp_34"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right_10"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:textColor="@color/color_1A1A1A"
        android:textStyle="bold"
        tools:text="1"/>

    <com.oortcloud.appstore.widget.RoundImageView
        android:layout_centerVertical="true"
        android:id="@+id/app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/ranking_tv"
        android:src="@mipmap/default_app_icon"
        app:radius="@dimen/radius_5" />

    <LinearLayout
        android:layout_toEndOf="@id/app_icon"
        android:layout_marginStart="@dimen/margin_left_16"
        android:layout_marginEnd="@dimen/margin_right_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_install"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/color_1A1A1A"
            android:ellipsize="end"
            android:lines="1"
            tools:text="问吧"/>

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_marginTop="@dimen/margin_top_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10"
            android:textColor="@color/color_1A1A1A"
            android:ellipsize="end"
            android:lines="1"
            tools:text="移动办公"/>

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/color_1A1A1A"
            android:ellipsize="end"
            android:lines="1"
            tools:text="一句话介绍-------------------------------------------------------"/>

        <LinearLayout
            android:id="@+id/down_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_download_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_2"
                tools:text="1次"
                android:textSize="@dimen/sp_10" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginEnd="@dimen/dp_6"
                android:textSize="@dimen/sp_10"
                android:text="|" />
            <TextView
                android:id="@+id/tv_app_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                tools:text="68.8MB" />
        </LinearLayout>
    </LinearLayout>

    <com.oortcloud.appstore.widget.DownloadProgressButton
        android:id="@+id/tv_install"
       android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_right_16"
        android:layout_marginTop="@dimen/margin_top_6"
        android:layout_width="60dp"
        android:layout_height="26dp"
        app:progress_btn_background_color="@color/main_color"
        app:progress_btn_background_second_color ="@color/color_F2F2F2"
        app:progress_btn_ball_style="STYLE_BALL_PULSE"
        app:progress_btn_radius="5dp"
        app:progress_btn_border_width="2dp"
        android:text=""/>
</RelativeLayout>