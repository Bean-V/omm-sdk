        <LinearLayout
            android:id="@+id/ll_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/tv_del"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:text=""
                android:paddingTop="8dp"
                android:drawableTop="@mipmap/ic_wx_oper_del_w"
                android:layout_marginRight="10dp"
                android:textSize="8sp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/tv_allSelect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:text=""
                android:paddingTop="8dp"
                android:layout_marginRight="10dp"
                android:textSize="8sp"
                android:drawableLeft="@mipmap/ic_wx_selectall_un"
                android:textColor="@color/white"
                android:visibility="visible"
                />
            <FrameLayout
                android:id="@+id/fl_copy"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:text=""
                    android:paddingTop="8dp"
                    android:layout_marginRight="10dp"
                    android:textSize="8sp"
                    android:drawableTop="@mipmap/ic_wx_oper_copy_w"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:gravity="center"
                    android:background="@drawable/badge"
                    android:minWidth="9dp"
                    android:text="9"
                    android:layout_marginRight="10dp"
                    android:textSize="7sp"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    />
            </FrameLayout>


            <TextView
                android:id="@+id/tv_canceledit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text=""
                android:paddingTop="8dp"
                android:layout_marginRight="10dp"
                android:textSize="8sp"
                android:drawableLeft="@mipmap/ic_wx_selectall_un"
                android:textColor="@color/white"
                />





        </LinearLayout>


