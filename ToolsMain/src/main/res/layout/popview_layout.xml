<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="164dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_sys"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/ic_set_lang_sys"
        android:text="跟随系统"
        android:textSize="14sp"
        android:textColor="@color/colorZT33"
        android:background="@color/colorAccent"
        />
    <Button
        android:id="@+id/btn_ch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/ic_set_lang_ch"
        android:text="中文简体"
        android:textSize="14sp"
        android:textColor="@color/colorZT33"
        android:background="@color/colorAccent"
        />
    <Button
        android:id="@+id/btn_en"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/ic_set_lang_en"
        android:text="English"
        android:textSize="14sp"
        android:textColor="@color/colorZT33"
        android:background="@color/colorAccent"
        />
    <Button
        android:id="@+id/btn_js"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/ic_japanlang"
        android:text="日本語"
        android:textSize="14sp"
        android:textColor="@color/colorZT33"
        android:background="@color/colorAccent"
        />
</LinearLayout>