<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sentaroh.android.upantool.Activity_FM_">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/nav_color"
      android:fitsSystemWindows="true"
      app:navigationIcon="@mipmap/ic_fm_back"
      app:navigationIconTint="@color/nav_icon_color"
      app:title="@string/file_manager"
      app:titleTextColor="@color/nav_text_color" >



    <Button
        android:id="@+id/btn_canceledit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/button_bg_color_selector"
        android:text="@string/fm_cancel"
        android:layout_marginLeft="0dp"
        android:textSize="14sp"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/ic_wx_canceledit"
        android:textAllCaps="false"
        android:visibility="gone"
        android:textColor="@color/dracula_capture"/>
<!--    android:background="@drawable/button_bg_color_selector"-->
<!--    android:text="@string/selectAll"-->
    <Button
        android:id="@+id/btn_allSelect"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginRight="0dp"
        android:textSize="14sp"
        android:background="@drawable/button_bg_color_selector"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:textColor="@color/dracula_capture"/>

  </androidx.appcompat.widget.Toolbar>

  <LinearLayout
    android:id="@+id/ll_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
    />

  <androidx.viewpager.widget.ViewPager
      android:id="@+id/vg"

      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:visibility="gone"

      />
  <TextView
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorBg"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:visibility="gone"
      android:layout_height="52dp">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        style="@style/MyFMTablayoutstyle"
        app:tabTextAppearance="@style/MyFMTablayoutstyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabIndicatorFullWidth="true"
        app:tabMinWidth="150dp">

    </com.google.android.material.tabs.TabLayout>


    <include layout="@layout/layout_filelist_oper_"
        android:id="@+id/ll_oper_bottom"
        android:visibility="gone"/>


  </FrameLayout>


</LinearLayout>