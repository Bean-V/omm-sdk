<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_fm_list_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_fm_list_item_pic"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/iv_fm_list_item_name"
                android:layout_width="wrap_content"

                android:maxWidth="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:ellipsize="middle"
                android:textSize="14sp"
                android:singleLine="true"
                android:text="1_ToolsSync_1.3_13_release.apk.1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_ft_list_size"
                    android:layout_width="wrap_content"

                    android:maxWidth="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorZT99"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:text="3.5M"
                    />


                <TextView
                    android:id="@+id/tv_ft_list_statu"
                    android:layout_width="wrap_content"

                    android:maxWidth="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorZT99"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:text="等待传输"
                    />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_ft_list_cancel"
            android:layout_width="wrap_content"

            android:maxWidth="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:text="取消"
            />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/pg_bar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:progress="0"
        android:max="100"
        android:layout_marginLeft="73dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progress_trans"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="@color/black"
        android:layout_marginLeft="59dp"
        android:background="@color/colorBg"
        />
</LinearLayout>