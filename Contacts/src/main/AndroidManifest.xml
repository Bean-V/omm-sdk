<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oortcloud.contacts">

    <uses-permission android:name="android.permission.INTERNET" />
<!--    android:label="@string/app_name"-->
    <application
        android:theme="@style/contactsOrdTheme"
        android:allowBackup="true"

        android:supportsRtl="true">

        <activity android:name="com.oortcloud.contacts.activity.PersonDetailActivity"
            android:theme="@style/contactsOrdTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>

        <activity
            android:name="com.oortcloud.contacts.activity.CompanyOrganizationActivity"
            android:fitsSystemWindows="false"
            android:focusable="false" />

        <activity
            android:name="com.oortcloud.contacts.activity.DepartAndPersonnelActivity"
            android:theme="@style/contactsOrdTheme"

            android:fitsSystemWindows="true"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.oortcloud.contacts.activity.SelectContactsActivity"
            android:launchMode="singleTask"
            android:theme="@style/contactsOrdTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity android:name="com.oortcloud.contacts.activity.SelectTwoActivity"
            android:theme="@style/contactsOrdTheme"/>

        <activity android:name="com.oortcloud.contacts.activity.SearchActivity"
            android:theme="@style/contactsOrdTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>

        <activity android:name="com.oortcloud.contacts.activity.SettingUserInfoShowActivity"
            android:launchMode="singleTask"
            android:theme="@style/contactsOrdTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name="com.oortcloud.contacts.activity.ManagerSettingActivity"
            android:launchMode="singleTask"
            android:theme="@style/contactsOrdTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity android:name="com.oortcloud.contacts.activity.ManagerSelectSettingActivity"
            android:launchMode="singleTask"
            android:theme="@style/contactsOrdTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
    </application>

</manifest>
