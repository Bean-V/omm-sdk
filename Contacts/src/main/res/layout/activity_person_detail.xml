                            android:layout_height="@dimen/dp_50"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="0dp"
                            card_view:cardCornerRadius="4dp"
                            card_view:cardBackgroundColor="#2f1156A6"
