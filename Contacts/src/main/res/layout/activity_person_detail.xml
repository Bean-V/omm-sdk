<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".activity.PersonDetailActivity">
    <com.oortcloud.contacts.view.MergerStatus
        android:id="@+id/mergerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nav_color">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/ic_back"
                android:tint="@color/nav_icon_color"
                />
            <TextView
                android:id="@+id/tv_title"
                android:gravity="center"
                
                android:layout_marginStart="@dimen/dp_16"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:layout_toEndOf="@id/img_back"
                android:text="@string/user_info_str"
                android:textColor="@color/nav_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="21dp"
                android:layout_height="21dp"
                
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:src="@mipmap/folding_icon"
                card_view:tint="#ffffff"
                android:tint="@color/nav_icon_color"/>
        </RelativeLayout>
    </com.oortcloud.contacts.view.MergerStatus>
