<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_white"
    android:divider="@drawable/popu_contacts_divider"
    android:dividerPadding="12dp"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:minWidth="140dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingBottom="8dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/a_group_chat_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:text="发起群聊"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/face_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:minWidth="140dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingBottom="8dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/build_group_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:text="面对面建群"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector_background_ripple"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:minWidth="140dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingBottom="8dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/add_icon1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:text="添加好友"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

