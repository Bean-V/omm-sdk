<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/dept_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

<!--       <com.oortcloud.contacts.view.ThreeStateCheckbox-->
<!--           android:layout_width="wrap_content"-->
<!--           android:layout_height="wrap_content"-->
<!--           android:layout_marginLeft="@dimen/dp_16"-->
<!--           android:button="@drawable/dept_user_select_setting_check_box"-->
<!--           android:visibility=""-->
<!--           android:checked="true"/>-->

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:visibility="gone"
            android:button="@drawable/user_setting_check_box" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dept_rv"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="#ffffff"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_24" />

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/drag_tips_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:layout_below="@id/dept_ll"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="@color/color_999"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:text="@string/drag_adjustment_order"/>

            <ImageView
                android:id="@+id/drag_tips_close_img"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@mipmap/icon_close"/>

        </RelativeLayout>
        <com.oortcloud.contacts.view.recycleview.WrapperRecycleView
            android:id="@+id/dept_user_rv"
            android:paddingTop="@dimen/dp_8"
            android:layout_below="@id/drag_tips_ll"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/empty_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dept_ll"
        android:background="#ffffff"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/icon_empty"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="#000000"
            android:textSize="@dimen/sp_12" />
    </FrameLayout>

</RelativeLayout>