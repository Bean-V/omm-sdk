<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPreview"
    tools:ignore="MissingDefaultResource"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="10dp">


    <ImageView

        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="image"
        android:layout_marginTop="20dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        >
        <TextView
            android:id="@+id/et_remark"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="25sp"
            android:textColor="#333333"
            android:text="市容环境"
            android:background="@drawable/bord_bg"
            />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_retake"
            android:layout_marginRight="10dp"
            android:layout_width="158dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="重拍"
            android:textSize="20sp"
            android:drawableLeft="@mipmap/retake"
            android:textColor="#ff6666"
            android:background="@drawable/bord_bg_cor"/>

        <TextView
            android:id="@+id/tv_post"
            android:layout_marginLeft="10dp"
            android:layout_width="158dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:drawableLeft="@mipmap/submit"
            android:textSize="20sp"
            android:text="提交"
            android:textColor="#ffffff"
            android:background="@drawable/bord_bg_cor_color"/>
    </LinearLayout>

</LinearLayout>