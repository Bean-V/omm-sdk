<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:ignore="MissingDefaultResource">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/iv_user_header"
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="8dp"
                            app:riv_corner_radius="32.5dp"
                            android:background="#dddddd"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textSize="35sp"
                                android:textColor="#333333"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/tv_user_depart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="个人信息"
                                android:textSize="30sp"
                                android:textColor="#666666"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                />


                        </LinearLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"></TextView>
                        <Button
                            android:id="@+id/btn_logOut"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:text="退出"
                            android:padding="8dp"
                            android:layout_marginRight="15dp"
                            android:minHeight="20dp"
                            android:minWidth="20dp"
                            android:textAllCaps="false"
                            android:background="#ffffff"
                            android:textColor="#ff0000"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_dongtai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="积分"
                                    android:textSize="30sp"
                                    android:textColor="#666666"
                                    android:layout_marginLeft="10dp"
                                    />

                                <TextView
                                    android:id="@+id/tv_dongtai_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100"
                                    android:textSize="35sp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    />


                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="巡查"
                                    android:textSize="30sp"
                                    android:textColor="#666666"
                                    android:layout_marginLeft="10dp"
                                    />
                                <TextView
                                    android:id="@+id/tv_xc_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="35sp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    />



                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_attend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="41dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="事件"
                                    android:textSize="30sp"
                                    android:textColor="#666666"
                                    android:layout_marginLeft="10dp"
                                    />

                                <TextView
                                    android:id="@+id/tv_eventcount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="35sp"
                                    android:textColor="#333333"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    />



                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"></TextView>



                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>


    </FrameLayout>








</LinearLayout>