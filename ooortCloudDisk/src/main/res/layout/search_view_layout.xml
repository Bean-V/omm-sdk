<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/ic_back"/>
        <FrameLayout
           android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.oortcloud.clouddisk.widget.CursorEditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:minHeight="30dp"
                android:textColor="@color/color_fff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/dp_16"
                android:hint="搜索文件"
                android:textColorHint="@color/color_81a"
                android:background="@drawable/bg_edit_line"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/color_cursor_cd"/>


            <ImageView
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_24"
                android:src="@mipmap/ic_delete"
                android:id="@+id/search_iv_delete"
                android:layout_gravity="right|center_vertical"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_search"
            android:padding="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_16"
            android:text="@string/search_str"
            />
    </LinearLayout>
    <ListView
        android:visibility="gone"
        android:id="@+id/search_lv_tips"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </ListView>

</LinearLayout>
