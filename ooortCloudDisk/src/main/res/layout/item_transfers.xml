<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/status_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_11"
            android:textColor="@color/color_666"
            android:textSize="14sp"
            android:visibility="visible"
            tools:text="上传完成 (10)" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="72dp"
            android:background="@color/color_ebe"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24">

            <com.oortcloud.clouddisk.widget.ProgressView
                android:id="@+id/progress_view"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:visibility="visible"
                app:borderWidth="4dp" />

            <ImageView
                android:id="@+id/file_img"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_centerVertical="true"
                android:visibility="visible"
                tools:src="@mipmap/ppt" />
        </FrameLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toLeftOf="@id/delete_img"
            android:layout_toRightOf="@id/ll_1"
            android:orientation="vertical">

            <com.oortcloud.clouddisk.widget.ScrollTextView
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:ellipsize="marquee"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                tools:text="测试.ppt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginBottom="@dimen/dp_18"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transfers_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_12"
                    tools:text="正在上传" />

                <TextView
                    android:id="@+id/file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_12"
                    tools:text="36.7 KB" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_20"
            android:src="@mipmap/ic_delete_1" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="72dp"
        android:background="@color/color_ebe"/>
</LinearLayout>