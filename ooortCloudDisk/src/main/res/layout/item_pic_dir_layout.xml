<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_bg"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:background="@mipmap/ic_file">

            <ImageView
                android:id="@+id/file_img"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:padding="@dimen/dp_8"
                tools:src="@mipmap/ppt" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_18"
            android:layout_toLeftOf="@id/checkbox"
            android:layout_toRightOf="@id/fl_1"
            android:orientation="vertical">
            <!--        android:ellipsize="marquee"-->
            <!--        android:singleLine="true"-->
            <!--        android:focusableInTouchMode="true"-->
            <com.oortcloud.clouddisk.widget.ScrollTextView
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="@color/color_333"
                android:textSize="@dimen/sp_16"
                tools:text="测试.ppt" />

            <TextView
                android:id="@+id/file_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/color_666"
                android:textSize="@dimen/sp_12"
                android:visibility="visible"
                tools:text="36.7 KB" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/file_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    tools:text="2020年5月20日" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666"
                    android:textSize="@dimen/sp_12"
                    tools:text="36.7 KB" />

            </LinearLayout>

        </LinearLayout>


    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_19"
        android:checked="false"
        android:theme="@style/checkbox_style"
        android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@color/color_ebe" />

</LinearLayout>