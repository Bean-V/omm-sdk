<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fff">


    <FrameLayout
        android:id="@+id/pic_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rl_1">

    <LinearLayout
        android:id="@+id/tab_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/color_3f7"
        app:tabIndicatorFullWidth="false"
        app:tabIndicator="@drawable/tab_layout_indicator"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_333"
        app:tabTextColor="@color/color_a1a" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@color/color_ebe"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
    </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/color_ebe"/>

        <TextView
            android:id="@+id/file_size_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@drawable/setting_bg"
            android:textColor="@color/color_333"
            android:textSize="@dimen/sp_14"
            android:text="已选      0B"/>

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:background="@drawable/confirm_bg"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/color_fff"
            android:textSize="@dimen/sp_14"
            android:text="上传(0)"/>

    </RelativeLayout>

</RelativeLayout>