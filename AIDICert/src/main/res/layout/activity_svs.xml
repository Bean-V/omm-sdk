<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_smf_signData_svs_verify_svs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地数字签名远端验证(SMF_SignData_SVS_VerifyData)"
                android:textAppearance="?android:textAppearanceSmall" />

            <Button
                android:id="@+id/btn_svs_signData_smf_verify_svs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="远端数字签名本地验证(SVS_SignData_SMF_VerifyData)"
                android:textAppearance="?android:textAppearanceSmall" />

            <Button
                android:id="@+id/btn_smf_signMsg_svs_verifymsg_svs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地消息签名远端验证(SMF_SignMessage_SVS_VerifyMessage)"
                android:textAppearance="?android:textAppearanceSmall" />

            <Button
                android:id="@+id/btn_svs_signmsg_smf_verifymsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="远端消息签名本地验证(SVS_SignMessage_SMF_VerifyMessage)"
                android:textAppearance="?android:textAppearanceSmall" />

            <Button
                android:id="@+id/btn_smf_encrypt_svs_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地数字信封加密远端解密(SMF_EncryptMessage_SVS_DecryptMessage)"
                android:textAppearance="?android:textAppearanceSmall" />

            <Button
                android:id="@+id/btn_svs_encrypt_smf_decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="远端数字信封加密本地解密(SVS_EncryptMessage_SMF_DecryptMessage)"
                android:textAppearance="?android:textAppearanceSmall" />

            <Button
                android:id="@+id/btn_multi_test_svs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一键测试"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_clear_svs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清空日志"
            android:textAppearance="?android:textAppearanceSmall" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>
